{
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "nextServer"
      }
    ]
  },
  "functions": {
    "source": ".",
    "ignore": [
      "node_modules",
      ".git",
      ".gitignore",
      ".nyc_output",
      ".runtimeconfig.json",
      "firebase-debug.log",
      "tslint.json",
      "tests"
    ],
    "runtime": "nodejs12"
  }
}
